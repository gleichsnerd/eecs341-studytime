<p id="notice"><%= notice %></p>

<h1>Listing Study Groups</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Gname</th>
      <th>Description</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_groups.each do |study_group| %>
      <tr>
        <td><%= study_group.course_id %></td>
        <td><%= study_group.gname %></td>
        <td><%= study_group.description %></td>
        <td><%= study_group.location %></td>
        <td><%= link_to 'Show', study_group %></td>
        <td><%= link_to 'Edit', edit_study_group_path(study_group) %></td>
        <td><%= link_to 'Destroy', study_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

